<%- include("partials/header") -%> 
    <h1>Home</h1>
    <p><%= homeContent %> </p>

    <% posts.forEach(element => { %>
        <div>
            <h1><%= element.title %> </h1>

            <% if (element.content.length < 100) { %>
                <p><%= element.content.substring(0, 100)%>
            
            <% } else { %>
                <p><%= element.content.substring(0, 100) + " ..."%> <a href="/posts/<%= element.title %>"> Leia mais</a></p>
            <% } %>
            
        </div>
    <% }); %>
<%- include("partials/footer") -%> 